{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"lib": ["DOM", "ES6", "ES2017"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"include": ["src"]
}
