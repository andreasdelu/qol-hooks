{
	"name": "qol-hooks",
	"version": "1.0.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"build:esm": "tsc --project tsconfig.esm.json",
		"postbuild:esm": "cp -R dist/types/* dist/esm/ && rm -r dist/types",
		"build": "rm -rf dist && npm run build:cjs && npm run build:esm && npm run postbuild:esm"
	},
	"keywords": [
		"react",
		"hooks",
		"qol",
		"quality",
		"life"
	],
	"author": "andreasdelu",
	"license": "MIT",
	"description": "A collection of React hooks to improve the quality of life of developers.",
	"files": [
		"dist",
		"README.md"
	],
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/esm/index.d.ts"
		}
	},
	"peerDependencies": {
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0"
	},
	"devDependencies": {
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0"
	}
}
